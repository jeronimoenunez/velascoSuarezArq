---
interface Props {
  imageSrc: string;
  altText: string;
  link?: string;
  imageTitle?: string;
  customClass?: string; // opcional, para extender estilos desde afuera
}

const {
  imageSrc,
  altText,
  link,
  imageTitle,
  customClass = ''
} = Astro.props;
---

<section class="hero-project-image-section">
  {imageTitle && <div class="image-title-overlay">{imageTitle}</div>}

  {link ? (
    <a href={link} class="image-link">
      <img 
        src={imageSrc} 
        alt={altText} 
        loading="lazy" 
        class={`w-full h-auto object-cover aspect-[16/9] ${customClass}`} 
      />
    </a>
  ) : (
    <img 
      src={imageSrc} 
      alt={altText} 
      loading="lazy" 
      class={`w-full h-auto object-cover aspect-[16/9] ${customClass}`} 
    />
  )}
</section>

<style>
.hero-project-image-section {
  width: 100%;
  max-width: 1400px;
  margin: 120px auto 0 auto;
  overflow: hidden;
  position: relative;
  padding-inline: 1rem;
}

.image-title-overlay {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  color: white;
  font-size: clamp(1rem, 3vw, 2.2em);
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  z-index: 10;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
  max-width: 95%;
  padding-inline: 1rem;
}

/* Responsivo */
@media (max-width: 992px) {
  .hero-project-image-section {
    max-width: 90%;
    margin-top: 80px;
  }
}

@media (max-width: 768px) {
  .hero-project-image-section {
    margin-top: 110px;
  }
}

@media (max-width: 480px) {
  .image-title-overlay {
    font-size: 1.1em;
    bottom: 20px;
    left: 23px;
  }
}
</style>
