  <style>
    .snap-container {
      scroll-snap-type: y mandatory;
      scroll-behavior: smooth;
    }

    .snap-section {
      scroll-snap-align: start;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .hero-nosotros {
      background-size: cover;
      background-position: center;
      position: relative;
      color: white;
      width: 100%;
      height: 100vh;
    }

    .hero-nosotros-overlay {
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      position: relative;
      z-index: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      text-align: center;
    }

    .hero-nosotros-title {
      z-index: 2;
      font-size: 3em;
      font-family: var(--font-serif);
      color: white;
    }

    .split-section {
      display: flex;
      flex-direction: row;
      width: 100%;
    }

    .split-section.reverse {
  flex-direction: row-reverse;
}

    .split-image {
      width: 50%;
      height: 100%;
      background-size: cover;
      background-position: center;
    }

    .split-text {
      width: 50%;
      background: #f7f7f2;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 0 4rem;
    }

    .scroll-dots {
  position: fixed;
  right: 2rem;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 10px;
  z-index: 9999;
}

.dot {
  width: 10px;
  height: 10px;
  background: #a9a9a9;
  border-radius: 50%;
  border: 1px solid #f7f7f2;
  display: block;
  transition: background 0.3s;
}

.dot:hover {
  background: black;
}

.active-dot {
  background: black !important;
}

    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 768px) {
      .split-section {
        flex-direction: column;
      }
      .split-image, .split-text {
        width: 100%;
        height: 50%;
      }
    }
  </style>
</Layout>
